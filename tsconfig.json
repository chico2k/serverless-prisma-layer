{
    "compilerOptions": {
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "allowJs": false,
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": ".build",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "lib": ["ES6", "ES2019", "ES2020"],
        "baseUrl": ".",
        "paths": {
            "uuid": ["layers/externals/node_modules/uuid", "layers/externals/node_modules/@types/uuid"],
            "database": ["layers/database/index.ts"]
        }
    },
    "include": ["."],
    "exclude": ["node_modules/**/*", ".serverless/**/*", ".webpack/**/*"]
}
